<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timers"
    tools:context=".SynTimer"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvCountdownTimer"
        android:layout_width="236dp"
        android:layout_height="80dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="140dp"
        android:autoSizeTextType="uniform"
        android:paddingTop="16dp"
        android:text="00:00"
        android:textSize="100dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textStyle="bold"
        android:padding="8dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_margin="8dp">

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
               android:textStyle="bold"/>
            <Button
                android:id="@+id/btnSelectContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blueish"
               android:drawableRight="@drawable/baseline_contacts_24" />

        </LinearLayout>
        <EditText
            android:padding="8dp"
            android:layout_margin="12dp"
            android:id="@+id/etInterval"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:hint="Time Interval (minutes)" />
        <Button
            android:padding="8dp"
            android:layout_margin="12dp"
            android:id="@+id/btnStartTimer"
            android:backgroundTint="@color/blueish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Timer" />

    </LinearLayout>
</LinearLayout>